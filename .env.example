# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration (for Render deployment)
PORT=3000

# Main chat ID for roll call system (get this from your Telegram group)
# To find your chat ID: add the bot to your group and check the logs when a message is sent
MAIN_CHAT_ID=your_main_chat_id_here

# Optional: Database file path (defaults to ./conversations.db)
DB_PATH=./conversations.db

# Optional: Bot configuration
MAX_CONTEXT_MESSAGES=10
RESPONSE_MAX_TOKENS=500
TEMPERATURE=0.8

# Webhook Configuration (for Render production deployment)
# Set RENDER=true to use webhooks instead of polling (recommended for production)
RENDER=true
# RENDER_EXTERNAL_HOSTNAME is automatically set by Render
# Example: your-service-name.onrender.com
# Or set custom webhook URL:
# WEBHOOK_URL=https://your-custom-domain.com/webhook
